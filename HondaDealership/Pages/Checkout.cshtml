@page
@model HondaDealership.Pages.CheckoutModel
@{
}
<div>
 <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Honda Dealership</h5>
      <small class="text-muted">Since 2006</small>
    </div>
    <p class="mb-1">All cars come with a full service and a 3 month warranty if anything goes wrong.</p>
    <small class="text-muted">We offer free delivery anywhere in Northern Ireland</small>
  </a>
</div>
<div class="card card-body">
				<p>Please check the car details are correct before proceeding. </p>
				<div class="input-group-section">
					<div class="form-group">
						<label class="control-label">
						Make:<span class="color-red"></span>
						</label>
						<label class="control-label">
						@Model.car.Make<span class="color-red"></span>
						</label>
					</div>			
				</div>
				<div class="form-group">
					<label class="control-label">
						   Model:<span class="color-red"></span>
					</label>
						<label class="control-label">
						@Model.car.CarModel<span class="color-red"></span>
						</label>
				</div>
						<div class="form-group">
						<label class="control-label">
						Year:<span class="color-red"></span>
						</label>
						<label class="control-label">
						@Model.car.Year<span class="color-red"></span>
						</label>
					</div>	
						<div class="form-group">
						<label class="control-label">
						Colour: <span class="color-red"></span>
						</label>
						<label class="control-label">
						@Model.car.Colour<span class="color-red"></span>
						</label>
					</div>	
						<div class="form-group">
						<label class="control-label">
						Registration: <span class="color-red"></span>
						</label>
						<label class="control-label">
						@Model.car.Registration<span class="color-red"></span>
						</label>
					</div>	
				   <div class="col-sm-3 d-grid">
						<p style="color:red;">@Model.errorMessage</p>
					</div>
			        <div class="col-sm-3 d-grid">
						<button type="submit" class="btn btn-success">Proceed to payment</button>
					</div>
                </div>